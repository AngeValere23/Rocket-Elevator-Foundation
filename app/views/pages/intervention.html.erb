<% content_for :for_head do %>
<title>Rocket Elevators - Intervention</title>
<% end %>
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <%= form_with(url: "/intervention", :html => {:class => 'cartContent clearfix'} ) do %>
                <fieldset>
                    <div class="row">
                        <div class="col-md-4"><label>Customer</label><%= select_tag('customer', options_from_collection_for_select(Customer.all, "id", "FullNameOfContact"), prompt: "--- Select ---", required: "required", class: "form-control pointer", id: 'customer-select') %></div>
                        <div class="col-md-4"><label>Building</label><%= select_tag('building', options_for_select([['--- Select ---', '']]), required: "required", class: "form-control pointer", id: 'building-select') %></div>
                        <div class="col-md-4"><label>Battery</label><%= select_tag('battery', options_for_select([['--- Select ---', '']]), required: "required", class: "form-control pointer", id: 'battery-select') %></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4"><label>Column</label><%= select_tag('column', options_for_select([['--- Select ---', '']]), required: "required", class: "form-control pointer", id: 'column-select') %></div>
                        <div class="col-md-4"><label>Elevator</label><%= select_tag('elevator', options_for_select([['--- Select ---', '']]), required: "required", class: "form-control pointer", id: 'elevator-select') %></div>
                        <div class="col-md-4"><label>Employee</label><%= select_tag('employee', options_from_collection_for_select(Employee.all, "id", "fullname"), prompt: "--- Select ---", required: "required", class: "form-control pointer", id: 'employee-select') %></div>
                    </div>
                    <div>
                        <div class=col-md-12><label>Description</label><%= text_area_tag('report', nil, id: 'description', required: "required", class: "form-control", rows: 8, maxlength: 1000) %></div>
                    </div>
                    <hr />
                </fieldset>
                <%= recaptcha_tags %>
                <%= submit_tag("Submit", class: "btn btn-primary")  %>
                <% end %>
            </div>
        </div>
    </div>
</section>

<% content_for :for_foot do %>
<%= javascript_include_tag "intervention.js", "data-turbolinks-track" => "reload" %>
<% end %>